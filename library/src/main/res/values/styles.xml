<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/action_sheet_in</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_out</item>
    </style>
    <!--TagsGroup-->
    <style name="TagsGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tg_isAppendMode">false</item>
        <item name="tg_inputHint">@string/add_tag</item>
        <item name="tg_borderColor">#EBEBEB</item>
        <item name="tg_textColor">#666666</item>
        <item name="tg_backgroundColor">@android:color/white</item>
        <item name="tg_dashBorderColor">#EBEBEB</item>
        <item name="tg_inputHintColor">#80000000</item>
        <item name="tg_inputTextColor">#DE000000</item>
        <item name="tg_checkedBorderColor">#49C120</item>
        <item name="tg_checkedTextColor">@android:color/white</item>
        <item name="tg_checkedMarkerColor">@android:color/white</item>
        <item name="tg_checkedBackgroundColor">#49C120</item>
        <item name="tg_selectedBorderColor">#49C120</item>
        <item name="tg_selectedTextColor">#49C120</item>
        <item name="tg_selectedBackgroundColor">@android:color/white</item>
        <item name="tg_pressedBackgroundColor">#EDEDED</item>
        <item name="tg_borderStrokeWidth">0.5dp</item>
        <item name="tg_textSize">14sp</item>
        <item name="tg_horizontalSpacing">10dp</item>
        <item name="tg_verticalSpacing">14dp</item>
        <item name="tg_horizontalPadding">8dp</item>
        <item name="tg_verticalPadding">4dp</item>
        <item name="tg_maxSize">5</item>
        <item name="tg_limitHint">@string/add_tag_limit_hint</item>
    </style>
    <!--TagsGroup-->
</resources>